<section class="gist-home">
  <div class="gist-heading">
    <%= image_tag 'https://via.placeholder.com/30x30', alt: 'user avatar', class: 'gist-avatar' %>
    <a href="#"><p class="gist-username">stephanyan</p></a> /
    <%= link_to @gist.filename, @gist, class: 'gist-filename' %>
  </div>
  <% if @gist.created_at == @gist.updated_at %>
    <p class="gist-time-ago font-weight-light">Created <%= time_ago_in_words(@gist.created_at) %> ago</p>
  <% else %>
    <p class="gist-time-ago font-weight-light">Updated <%= time_ago_in_words(@gist.updated_at) %> ago</p>
  <% end %>
  <p class="gist-description font-weight-light"><%= @gist.description %></p>
  <div class="gist-content">
    <p><%= @gist.content %></p>
  </div>
  <br>
  <div class="float-right">
    <%= link_to edit_gist_path(@gist), title: 'Click to edit' do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to gist_path(@gist), method: :delete,
        data: { confirm: "Are you sure?" }, title: 'Click to delete' do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
</section>
